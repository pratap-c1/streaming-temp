<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <variable name="activity" type="screen.record.and.serve.view.ExoActivity"/>
    <variable name="data" type="screen.record.and.serve.models.Data"/>
  </data>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".view.ExoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
    >
      <EditText
          android:id="@+id/port"
          android:hint="Port"
          android:lines="1"
          android:text="@={data.port}"
          android:layout_alignParentEnd="true"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:inputType="number"
      />
      <EditText
          android:id="@+id/authority"
          android:layout_toStartOf="@id/port"
          android:hint="Authority"
          android:lines="1"
          android:text="@={data.ipAddress}"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
      />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
    >
      <Button
          android:id="@+id/multi_play_back"
          android:layout_width="match_parent"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Start playback"
          android:onClick="@{(b) -> activity.multiPlayBack()}"
      />
      <Button
          android:layout_weight="1"
          android:id="@+id/play_back_stop"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="STOP playback"
          android:onClick="@{(b) -> activity.playBackStop()}"
      />
    </LinearLayout>
    <Button
        android:id="@+id/play_single_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play single file"
        android:onClick="@{(b) -> activity.playSingleDownloadedFile()}"
    />
    <TextView
        android:lines="2"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        android:id="@+id/simple_player"
    />

  </LinearLayout>
</layout>