<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
  <data>
    <variable name="activity" type="screen.record.and.serve.view.TrialActivity"/>
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent"
      tools:context=".view.TrialActivity">
    <Button
        android:text="Start Capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_capture"
        android:onClick="@{(b) -> activity.captureRequest()}"
    />
    <Button
        android:text="Stop Capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stop_capture"
        android:onClick="@{(b) -> activity.stopCaptureFromBtn()}"
    />
    <Button
        android:text="Start Recorder Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_recorder"
        android:onClick="@{(b) -> activity.startRecorderService()}"
    />
    <Button
        android:text="Bind Recorder Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stop_recorder"
        android:onClick="@{(b) -> activity.bindRecorderService()}"
    />
    <Button
        android:text="Delete all soruce "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete_all_source"
        android:onClick="@{(b) -> activity.deleteAllFilesInADir()}"
    />
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player"
        android:layout_width="match_parent"
        app:use_controller="false"
        android:layout_height="match_parent">
    </com.google.android.exoplayer2.ui.PlayerView>
  </LinearLayout>
</layout>